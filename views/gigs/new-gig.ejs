<% include ../partials/_header %>

<a href="/gigs">Back to all gigs</a>

<h1>Create A New Gig</h1>
   
   <form id="Form" action="/gigs" method="POST" enctype="multipart/form-data">

    <h2>Event Details</h2>
   
        <input type="text" name="name" placeholder="Headliner">
        <input type="text" name="supports" placeholder="Supports">

        <select type="text" name="venue" placeholder="venue">
            <option value="Please Choose A Venue"> Please Choose A Venue </option>
            <option value="Cambridge Corn Exchange"> Cambridge Corn Exchange </option>
            <option value="Flying Pig"> Flying Pig </option>
            <option value="Hidden Rooms"> Hidden Rooms </option>
            <option value="Storey's Field Centre"> Storey's Field Centre </option>
            <option value="The Blue Moon"> The Blue Moon </option>
            <option value="The Corner House"> The Corner House </option>
            <option value="The Haymakers"> The Haymarkers </option>
            <option value="The Junction (J1)"> The Junction (J1) </option>
            <option value="The Junction (J2)"> The Junction (J2) </option>
            <option value="The Junction (J3)"> The Junction (J3) </option>
            <option value="The Portland Arms"> The Portland Arms </option>
        </select>

        <input type="text" id="date" name="date" placeholder="Select a date" >
        <div>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/*" required>
        </div>
        <input type="text" name="ticketsUrl" placeholder="Tickets URL">
        <input type="number" step="0.01" name="price" placeholder="Price">
        <input type="text" name="website" placeholder="Website URL">
        <input type="text" name="facebook" placeholder="Facebook Profile URL">
        <input type="text" name="twitter" placeholder="Twitter Profile URL">
        <input type="text" name="instagram" placeholder="Instagram Profile URL">
        <input type="text" name="youtube" placeholder="YouTube Profile URL">
        <input type="text" name="youtubeVideoID" placeholder="YouTube Video ID">
        <input type="text" name="spotify" placeholder="Spotify Profile URL">
        <input type="text" name="bandcamp" placeholder="Bandcamp Profile URL">
        <textarea type="text" name="description" placeholder="Bio"></textarea>


    <input type="submit" value="Submit">
</form>

<% include ../partials/_footer %>