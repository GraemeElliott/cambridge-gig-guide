<% include ../partials/_header %>

<div class="wrapper">
    <div class="form-wrapper">
        <div class="form-heading-block">
            <h1 class="form-heading">Password Reset</h1>
        </div>
        <div class="form-text"> Please enter your new password below. An email will be sent to you to confirm it has been reset.</div>
        <form class="form" action="/reset/<%= token %>" method="POST">
            <div class="input-field">
                <label for="password">New Password:</label>
                <input type="password" name="password" required>
            </div>
            <div class="input-field">
                <label for="passwordConfirmation">Confirm New Password:</label>
                <input type="password" name="passwordConfirmation" required>
            </div>
                <input type="submit" value="Submit" class="submit-btn">
        </form>
    </div>
</div>

<% include ../partials/_footer %>