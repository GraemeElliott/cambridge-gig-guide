  <section class="newly-released-gigs">
    <h1 class="gig-listings-heading"> Newly Announced/Released </h1>

    <div class="gig-grid-nr"> 
      <% for (var gig of newlyReleasedGigs) { %>
        <div class="gig-card">
          <a href="/gigs/<%= gig.nameForUrl %>">
            <img class="gig-image" src="<%= gig.image%>">
          </a>
          <div class="gig-name card-text"> <%= gig.name %> </div>
            <div class="gig-venue card-text"> <%= gig.venue %> </div>
            <div class="gig-date card-text"> <%= moment(gig.date).format("dddd Do MMMM YYYY") %> </div>
        </div>
      <% } %>
    </div>

    <div class="gig-panel-nr">
      <% for (var gig of newlyReleasedGigs) { %>
        <div class="row">
          <div class="column-left">
            <a class="panel-link" href="/gigs/<%= gig.nameForUrl %>">
            <img class="gig-image" src="<%= gig.image%>">
          </a>
          </div>
          <div class="column-right">
            <div class="gig-name gig-panel-name gig-panel-text"> <%= gig.name %> </div>
            <div class="gig-venue gig-panel-text"> <%= gig.venue %> </div>
            <div class="gig-date gig-panel-text"> <%= moment(gig.date).format("dddd Do MMMM YYYY") %> </div>
            <div class="gig-description"> <%= gig.description %> </div>
        </div>
          </div>
        
      <% } %>
    </div>
  </section>

  <section class="upcomming-gigs">
    <h1 class="gig-listings-heading"> Upcomming Gigs </h1>

    <div class="gig-grid-ug">
      <% for (var gig of upcommingGigs) { %>
        <div class="gig-card">
          <a href="/gigs/<%= gig.nameForUrl %>">
            <img class="gig-image" src="<%= gig.image%>">
          </a>
          <div class="gig-name card-text"> <%= gig.name %> </div>
            <div class="gig-venue card-text"> <%= gig.venue %> </div>
            <div class="gig-date card-text"> <%= moment(gig.date).format("dddd Do MMMM YYYY") %> </div>
        </div>
      <% } %>
    </div>

    <div class="gig-panel-ug">
      <% for (var gig of upcommingGigs) { %>
        <div class="row">
          <div class="column-left">
            <a href="/gigs/<%= gig.nameForUrl %>">
            <img class="gig-image" src="<%= gig.image%>">
          </a>
          </div>
          <div class="column-right">
            <div class="gig-name gig-panel-name gig-panel-text"> <%= gig.name %> </div>
            <div class="gig-venue gig-panel-text"> <%= gig.venue %> </div>
            <div class="gig-date gig-panel-text"> <%= moment(gig.date).format("dddd Do MMMM YYYY") %> </div>
            <div class="gig-description"> <%= gig.description %> </div>
        </div>
          </div>
      <% } %>
    </div>
    
    <button onclick="window.location.href='/gigs'" class="view-more-btn button button-light">View More Upcomming Gigs</button>
  </section>
</div>





















